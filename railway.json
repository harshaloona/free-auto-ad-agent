{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "python backend/main.py",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "TORCH_DEVICE": "cuda",
        "VIDEO_QUALITY": "fast",
        "MODEL_CACHE_DIR": "/app/models_cache",
        "STORAGE_TYPE": "local",
        "DEBUG": "false",
        "LOG_LEVEL": "INFO"
      }
    },
    "development": {
      "variables": {
        "TORCH_DEVICE": "cpu",
        "VIDEO_QUALITY": "fast", 
        "DEBUG": "true",
        "LOG_LEVEL": "DEBUG"
      }
    }
  },
  "services": [
    {
      "name": "backend",
      "source": {
        "type": "image",
        "image": "."
      },
      "variables": {
        "PORT": 8000
      }
    },
    {
      "name": "redis",
      "source": {
        "type": "image", 
        "image": "redis:7-alpine"
      }
    },
    {
      "name": "postgres",
      "source": {
        "type": "image",
        "image": "postgres:15"
      },
      "variables": {
        "POSTGRES_DB": "adagent",
        "POSTGRES_USER": "user",
        "POSTGRES_PASSWORD": "password"
      }
    }
  ]
}